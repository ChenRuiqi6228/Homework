{the first code}
clear
px =[ -3 0 1 1.5 ];
py = [ 2 1 -2 3 ];
plot(px,py,'*','MarkerSize',10)
axis ([ -3.5 2.5 -4 4 ])
axis equal
grid on
ax = gca
ax.XAxisLocation = 'origin';
ax.YAxisLocation = 'origin';
box off






