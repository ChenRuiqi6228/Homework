clear
syms x
f(x) =sin(x);
fplot(f,[-2*pi 2*pi] ,'m','LineWidth',3)
hold on 
axis equal
classaxis
plot( 0.5, f(0.5),'b*','MarkerSize',10)
double(f(0.5))
hold off





syms  x y
F(x,y) = x^2 + y^2 -1;
fimplicit(F)
hold on
% A =(1,2)
F(0,1)
plot(0,1,'r*')
axis equal








syms t
x(t) = t * cos(t);
y(t) = t * sin(t);
fplot(x(t),y(t),[0 20*pi])
hold on
axis equal
t0 =12*pi
plot (x(t0),y(t0),'r*','MarkerSize',10)





syms t
x(t) = t*cos(t);
y(t) = t*sin(t);
z(t) = t;
fplot3(x, y, z, [0 12*pi])
axis equal
xlabel('x'); ylabel('y'); zlabel('z');




syms t
x(t) = t*cos(t);
y(t) = t*sin(t);
z(t) = t;
fplot3(x, y, z, [0 12*pi])
axis equal
xlabel('x'); ylabel('y'); zlabel('z');
t0 = 6*pi;
P = [ x(t0), y(t0), z(t0) ];    //hua dian  
hold on
plot3( P(1), P(2), P(3), 'r*', ...
    'MarkerSize', 5 )







// class1028

syms t
x(t) = t*cos(t);
y(t) = t*sin(t);
z(t) = t;
fplot3(x, y, z, [0 12*pi])
axis equal
xlabel('x'); ylabel('y'); zlabel('z');    // key word : label
t0 = 6*pi;
P = [ x(t0), y(t0), z(t0) ];
hold on
plot3( P(1), P(2), P(3), 'r*', ...    // hua tu 
    'MarkerSize', 5 )
xd(t) = diff(x, t);    // xiang liang
yd(t) = diff(y, t);
zd(t) = diff(z, t);
v = [ xd(t0), yd(t0), zd(t0) ];






syms t
x(t) = t*cos(t);
y(t) = t*sin(t);
z(t) = t;
fplot3(x, y, z, [0 12*pi])
axis equal
xlabel('x'); ylabel('y'); zlabel('z');
t0 = 6*pi;
P = [ x(t0), y(t0), z(t0) ];
hold on
plot3( P(1), P(2), P(3), 'r*', ...   // hua tu 
    'MarkerSize', 5 )
xd(t) = diff(x, t);   //xinag liang 
yd(t) = diff(y, t);
zd(t) = diff(z, t);
v = [ xd(t0), yd(t0), zd(t0) ];
quiver3( P(1), P(2), P(3),...    // key word:quiver
    v(1), v(2), v(3),...
    'r', 'LineWidth', 3)










